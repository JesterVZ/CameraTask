<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="CameraAPP.MainPage">

    <StackLayout>
        <ListView ItemsSource="{Binding CameraList}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout Orientation="Horizontal" Padding="10, 0, 10, 0">
                                <Label Text="{Binding Name}" Margin="0, 0, 25, 0" VerticalOptions="Center"/>
                                <StackLayout Orientation="Horizontal" Margin="0, 0, 25, 0">
                                    <Label Text="Есть ли звук: " VerticalOptions="Center"/>
                                    <CheckBox IsChecked="False"/>
                                </StackLayout>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="Идет ли запись: " VerticalOptions="Center"/>
                                    <CheckBox IsChecked="False"/>
                                </StackLayout>
                                
                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                    
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
